{
  "name": "pixi-framework",
  "version": "0.0.0",
  "description": "Pixi Framework",
  "main": "dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sefabaser/Pixi-Framework.git"
  },
  "author": "sefabaser",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sefabaser/Pixi-Framework/issues"
  },
  "prettier": {
    "trailingComma": "none",
    "tabWidth": 2,
    "printWidth": 150,
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "moduleDirectories": [
      "node_modules",
      "./"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "homepage": "https://github.com/sefabaser/Pixi-Framework#readme",
  "scripts": {
    "build": "tsc",
    "pretest": "clear",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "deploy": "npm test && npm run build && npm publish"
  },
  "dependencies": {
    "@pixi/unsafe-eval": "^5.3.3",
    "actions-lib": "1.3.0",
    "helpers-lib": "1.4.1",
    "pixi-sound": "^3.0.5",
    "pixi-viewport": "^4.13.2",
    "pixi.js": "^5.3.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-no-null": "^1.0.2",
    "eslint-plugin-sort-class-members": "^1.8.0",
    "jest": "^26.4.2",
    "ts-jest": "^26.2.0",
    "typescript": "^4.0.2"
  }
}
