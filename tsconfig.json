{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "es5",
    "lib": ["es5", "es6", "dom"],
    "sourceMap": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strict": true,
    "strictFunctionTypes": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist/",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts"]
}
